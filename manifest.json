{
    "manifest_version": 3,
    "name": "Islamic Prayer Times",
    "version": "1.2",
    "description": "A comprehensive Chrome extension for Islamic prayer times with adhan alerts, Qibla direction, and Islamic calendar",
    "permissions": [
      "alarms",
      "notifications",
      "storage",
      "geolocation"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "options_page": "settings.html",
    "default_locale": "en",
    "web_accessible_resources": [
      {
        "resources": ["_locales/*/*.json"],
        "matches": ["<all_urls>"]
      }
    ]
  }